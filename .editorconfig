root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md}]
indent_size = 4
indent_style = space

[*.{sh,bash,bash_profile,bashrc,zsh,zshenv,zshrc}]
indent_size = 2
indent_style = space

[*.{vim,vimrc}]
indent_size = 4
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab
